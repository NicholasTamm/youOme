<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Image Header Section -->
        <ImageView
            android:id="@+id/create_group_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/group_banner"
            android:contentDescription="Create group image"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.25" />

        <!-- Form Content Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/form_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/create_group_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Header -->
            <TextView
                android:id="@+id/header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Group"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Group Name Section -->
            <TextView
                android:id="@+id/label_group_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/header_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Group Name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/group_name_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/label_group_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxStrokeColor="@color/dark_gray"
                app:hintTextColor="@color/dark_gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/group_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter group name"
                    android:inputType="textCapWords"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Currency Section -->
            <TextView
                android:id="@+id/label_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/group_name_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Currency" />

            <Spinner
                android:id="@+id/currency_spinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/label_currency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:entries="@array/currencies" />

            <!-- Members Section -->
            <TextView
                android:id="@+id/label_members"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add Members"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/currency_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Add Members" />

            <!-- Add Member Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/member_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/label_members"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/add_member_button"
                app:boxStrokeColor="@color/dark_gray"
                app:hintTextColor="@color/dark_gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/member_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter member name"
                    android:inputType="textCapWords"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_member_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/black"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toTopOf="@id/member_input_layout"
                app:layout_constraintBottom_toBottomOf="@id/member_input_layout"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Members List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/members_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:maxHeight="200dp"
                app:layout_constraintTop_toBottomOf="@id/member_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_member_chip" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Create Group Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_group_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Create Group"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/black"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Create Group" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>