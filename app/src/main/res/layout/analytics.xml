<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analytics"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Spending Facts Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/spending_facts_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Week's Spending"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Spent:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/total_spent_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expenses Count:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/expenses_count_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Average per Expense:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/avg_expense_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Top Category:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/top_category_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/category_food" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Debt Trends Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/debt_trends_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Debt Trends"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <!-- Simple debt trend visualization -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="You Owe:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/total_owed_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/red" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Owed to You:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/total_owed_to_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/green" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Net Balance:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/net_balance_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <!-- Simple debt trend chart placeholder -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="Debt Trend Chart\n(Visual representation of debt changes over time)"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray"
                    android:gravity="center"
                    android:background="@color/light_gray"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Overall Spending Graph Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/spending_graph_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weekly Spending Overview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <!-- Weekly spending summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="This Week:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/this_week_spending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Last Week:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/last_week_spending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change:"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/spending_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/green" />

                </LinearLayout>

                <!-- Simple spending chart placeholder -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="Weekly Spending Chart\n(Visual representation of spending by week)"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray"
                    android:gravity="center"
                    android:background="@color/light_gray" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>